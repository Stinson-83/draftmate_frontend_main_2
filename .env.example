# General / LLM Keys
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here  # Used by Enhance_bot, same as GOOGLE_API_KEY
OPENAI_API_KEY=your_openai_api_key_here
VOYAGE_API_KEY=your_voyage_api_key_here

# AWS Configuration (for S3 and other services)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your_s3_bucket_name
S3_BUCKET=your_s3_bucket_name  # Used by Query service

# Database Configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
PSQL_PASSWD=your_postgres_password # Used by converter, same as POSTGRES_PASSWORD
POSTGRES_DB=lex_bot_db
POSTGRES_HOST=db # Use 'db' for Docker Compose, 'localhost' for local development
POSTGRES_PORT=5432
POSTGRES_DSN=postgresql://postgres:password@localhost:5432/lex_bot_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/lex_bot_db # Used by Deep_research

# Web Search APIs
TAVILY_API_KEY=your_tavily_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key
FIRECRAWLER_API_KEY=your_firecrawl_api_key # Used by Enhance_bot
SERPER_API_KEY=your_serper_api_key
GOOGLE_SERP_API_KEY=your_google_serp_api_key
WEB_SEARCH_MAX_RESULTS=5
PREFERRED_DOMAINS=

# Deep Research / Lex Bot Config
LLM_MODE=fast
LLM_PROVIDER=gemini
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
MEM0_ENABLED=true
SESSION_CACHE_TTL=30
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=lex-bot-v2

# Rate Limiting & Timeouts
SCRAPE_DELAY=2.5
MAX_TOKENS_PER_QUERY=50000
MAX_TOKENS_PER_USER_DAILY=500000
AGENT_TIMEOUT=30
REQUEST_TIMEOUT=90
MAX_QUERY_LENGTH=2000
RATE_LIMIT_RPM=10
CHAT_RETENTION_DAYS=15
MEM0_RETENTION_DAYS=15
TEST_MODE=0

# Query Service Config
UPLOAD_FOLDER=./downloaded_files
INPUT_JSON=scraped_data.jsonl
INTERACTIVE=true

# SSH Tunnel (Optional/Legacy)
BASTION_IP=
SSH_KEY_PATH=
RDS_ENDPOINT=
SSH_USER=ec2-user

